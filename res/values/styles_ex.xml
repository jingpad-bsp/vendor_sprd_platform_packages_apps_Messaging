<resources>
    <style name="LowWarningvisible" parent="BugleBaseTheme">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowNoDisplay">@null</item>
    </style>

    <style name="VcalendarAttachmentSingleStyle">
        <item name="android:paddingRight">@dimen/message_text_left_right_padding</item>
        <item name="android:paddingLeft">@dimen/message_text_left_right_padding</item>
    </style>

    <style name="MessageVcalendarAttachmentStyle">
        <item name="android:paddingRight">@dimen/message_text_left_right_padding</item>
        <item name="android:paddingLeft">@dimen/message_text_left_right_padding</item>
    </style>
    <!-- bug 478514: Add for MmsFolderView Feature Begin -->
    <style name="ActionBarMenuTextStyle">
        <item name="android:textSize">@dimen/actionbar_menu_text_size</item>
    </style>
    <style name="CustomTheme" parent="BugleTheme">
        <item name="android:actionMenuTextAppearance">@style/ActionBarMenuTextStyle</item>
    </style>
    <style name="CustomTheme.MessageDetailsActivity" parent="CustomTheme">
        <item name="android:windowBackground">@color/conversation_background</item>
        <item name="windowActionBarOverlay">false</item>
        <item name="android:fastScrollPreviewBackgroundLeft">@drawable/contacts_fastscroll_label_left</item>
        <item name="android:fastScrollPreviewBackgroundRight">@drawable/contacts_fastscroll_label_right</item>
    </style>
    <style name="contextmenu_textview">
        <item name="android:layout_height">@dimen/contextmenu_list_item_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/contextmenu_text_size</item>
        <item name="android:textColor">@color/color_dark</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:paddingLeft">@dimen/contextmenu_text_padding</item>
        <item name="android:background">@drawable/contextmenu_list_item_selector</item>
        <item name="android:clickable">true</item>
    </style>
    <!-- bug 478514: Add for MmsFolderView Feature End -->

    <!-- Sprd add for sms merge forward begin -->
    <style name="MmsHoloThemeNewui" parent="@android:style/Theme.Material.Light.DarkActionBar">
       <item name="android:actionMenuTextAppearance">@style/MMSTextAppearance.Holo.Widget.ActionBar.Menu</item>
       <item name="android:spinnerDropDownItemStyle">@style/CustomDropDownItemStyle</item>
       <item name="android:colorPrimary">@color/action_bar_background_color</item>
       <item name="android:colorPrimaryDark">@color/action_bar_background_color_dark</item>
       <item name="android:actionModeBackground">@color/action_mode_background</item>
       <item name="android:actionBarWidgetTheme">@style/MyActionBarWidgetTheme</item>
       <item name="android:actionBarStyle">@style/MyActionBar</item>
       <item name="android:actionBarSize">52dip</item>
    </style>

    <style name="MMSTextAppearance.Holo.Widget.ActionBar.Menu" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Menu">
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="CustomDropDownItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textAppearance">@style/CustomDropDownItemTextStyle</item>
    </style>

    <style name="CustomDropDownItemTextStyle" >
        <item name="android:textSize">18dip</item>
    </style>

    <style name="MyActionBarWidgetTheme" parent="@android:style/Theme.Material.Light">
        <item name="*android:searchResultListItemHeight">61dp</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Material.Light.ActionBar">
        <item name="android:background">@color/action_bar_background_color</item>
        <item name="android:titleTextStyle">@style/ActionBarTitleTextStyleNewUI</item>
        <item name="android:subtitleTextStyle">@style/ActionBarSubTitleTextStyleNewUI</item>
    </style>

    <style name="ActionBarTitleTextStyleNewUI" parent="android:TextAppearance.Material.Widget.ActionBar.Title">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="ActionBarSubTitleTextStyleNewUI" parent="android:TextAppearance.Material.Widget.ActionBar.Subtitle">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">15dp</item>
    </style>
    <!-- Sprd add for sms merge forward end -->
    <!-- bug 495194 : add for search feature begin -->
    <style name="TextAppearance">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textColorHighlight">#FFFF9200</item>
        <item name="android:textColorHint">?android:textColorHint</item>
        <item name="android:textColorLink">#5C5CFF</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance.SearchResult">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">?android:textColorPrimaryInverse</item>
        <item name="android:textColorHint">?android:textColorHintInverse</item>
    </style>

    <style name="TextAppearance.SearchResult.Title">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.SearchResult.Subtitle">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">?android:textColorSecondaryInverse</item>
    </style>

    <style name="MmsHoloTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar"></style>

    <style name="NotificationPrimaryText">
        <item name="android:textColor">#666666</item>
    </style>

    <style name="FullyTranslucent" parent="android:Theme.Translucent.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- SPRD: add theme for UUI. @{ -->

    <style name="MmsHoloThemeNewuiWithSpecailActionMode" parent="@style/MmsHoloThemeNewui">
        <item name="android:actionModeBackground">@*android:drawable/ab_solid_light_holo</item>
    </style>

    <style name="ComposeMessageTheme" parent="@android:style/Theme.Material.Light.DarkActionBar">
        <item name="android:actionMenuTextAppearance">@style/MMSTextAppearance.Holo.Widget.ActionBar.Menu</item>
        <item name="android:spinnerDropDownItemStyle">@style/CustomDropDownItemStyle</item>
        <item name="android:colorPrimaryDark">#0277bd</item>
        <item name="android:actionModeBackground">@color/action_mode_background</item>
        <item name="android:actionBarStyle">@style/MyActionBarCM</item>
        <item name="android:actionBarSize">52dip</item>
        <item name="android:colorPrimary">#0288d1</item>
        <item name="*android:lightY">150dp</item>
    </style>

    <style name="TextShadowLight">
        <item name="android:textColor">@color/solid_white</item>
        <item name="android:shadowColor">@color/text_shadow_color_light</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="BannerTitleText" parent="TextShadowLight">
        <item name="android:textSize">18sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BannerContentText" parent="TextShadowLight">
        <item name="android:textSize">14sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="MMSSimChooseTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="MyActionBarCM" parent="@android:style/Widget.Material.Light.ActionBar">
        <item name="android:background">#0288d1</item>
        <item name="android:titleTextStyle">@style/ComposeMessageActionBarTitleTextStyleNewUI</item>
        <item name="android:subtitleTextStyle">@style/ActionBarSubTitleTextStyleNewUI</item>
        <item name="android:elevation">10dp</item>
    </style>

    <style name="ComposeMessageActionBarTitleTextStyleNewUI" parent="android:TextAppearance.Material.Widget.ActionBar.Title">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="FullyTranslucentNewui" parent="MmsHoloThemeNewui">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <!-- bug 495194 : add for search feature end -->

    <style name="MonkeyInvisible" parent="BugleBaseTheme">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowNoDisplay">false</item>
    </style>
    
    <style name="ThemeOverlay.ContactPickerFragment.Toolbar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
    	<item name="android:textColor">#000000</item>
        <item name="actionOverflowMenuStyle">@style/OverflowMenuStyle</item>
    </style>
    
    <style name="OverflowMenuStyle" parent="@style/Widget.AppCompat.PopupMenu.Overflow">
        <!-- 是否覆盖锚点，默认为true，即盖住Toolbar -->
        <item name="overlapAnchor">true</item>
        <!-- 弹出层背景颜色 -->
        <item name="android:popupBackground">#ffffff</item>
        <!-- 弹出层垂直方向上的偏移，即在竖直方向上距离Toolbar的距离，值为负则会盖住Toolbar -->
        <item name="android:dropDownVerticalOffset">0dp</item>
        <!-- 弹出层水平方向上的偏移，即距离屏幕左边的距离，负值会导致右边出现空隙 -->
        <item name="android:dropDownHorizontalOffset">0dp</item>
    </style>

    <style name="SmailMainActivityStyle" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:colorAccent">@color/action_bar_background_color</item>
        <item name="android:textColorLink">#5C5CFF</item>
    </style>
    <!--Bug 983721 dialog去阴影-->
    <style name="dialogWithoutBg">
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="Theme.Sprd.Dialog.NoTitle" parent="BugleTheme.DialogActivity">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="CustomTheme.SortMsgListActivity" parent="CustomTheme">
        <item name="android:windowBackground">@android:color/background_light</item>
    </style>

</resources>
